@model EntityLayer.Concreate.Category

@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditCategory</h2>

@using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategori ID")
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryID)
    <br /> <br />
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryName)
    <br /> <br />
    @Html.Label("Açıklamayı Yazınız")
    @Html.TextAreaFor(x => x.CategoryAçıklama, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryAçıklama)
    <br /> <br />
    <button class="btn btn-info">Güncelle</button>
</div>
}